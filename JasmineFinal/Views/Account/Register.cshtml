            <input type="radio" name="blankRadio" id="blankRadio7" value="option1" aria-label="..." />
            <img src="~/Pics/subaru.png" />
            <input type="radio" name="blankRadio" id="blankRadio8" value="option1" arain-label="..." />
            <img src="~/Pics/fairy_princess.png" />
            <input type="radio" name="blankRadio" id="blankRadio9" value="option1" arain-label="..." />
            <img src="~/Pics/hockey_128x128.png" />
            <input type="radio" name="blankRadio" id="blankRadio10" value="option1" arain-label="..." />
            <img src="~/Pics/panda.png" />
            <input type="radio" name="blankRadio" id="blankRadio5" value="option1" aria-label="..." />
            <img src="~/Pics/baseball_128x128.png" />
            <input type="radio" name="blankRadio" id="blankRadio11" value="option1" aria-label="..." />
            <img src="~/Pics/basketball.png" />
            <input type="radio" name="blankRadio" id="blankRadio12" value="option1" aria-label="..." />
            <img src="~/Pics/tennis_128x128.png" />

        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-10" id="inputbox">
            <div>
                <div id="userNameDisplay"></div>
                <button onclick="this.style.visibility='hidden'; [nameGen()];" id="genButton" >Generate Username</button>
            </div>

                (You MUST Use Random Generated Username!)<br />
                <input id="uName" name="uName" type="hidden" placeholder="Username" disabled /><br />

                Are You A Teen Or Tween?<br />
                (MUST PICK ONE)<br />
                Tween:(6th Grade) <input type="radio" name="age" value="no" id="tween" /><br />
                Teen:(12th Grade/Freshman in College):<input type="radio" name="age" value="yes" id="teen" /><br />
         
                First Name: <input id="FirstName" value="" type="text" size="25" />
                Last Name: <input id="LastName" value="" type="text" size="25" />
                <button id="backCheck" onclick="whatever()">Run Background Check</button><br />
                (TEENS MUST PROVIDE FRIST AND LAST NAME FOR A BACKGROUND CHECK!)<br />
            
                
           
            



        </div>
        <div class="col-lg-2"></div>
        <div id="try" class="col-lg-10">The bottom fields are required!</div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
    <div class="container">

        <input type="checkbox" name="age" value="agree" id="check">By clicking this I agree that I have my parents permission to access this website.<br/>


    </div>
    <div class="form-group">
        <div class="col-lg-2"></div>
        <div class="col-md-10">
            <form>
                <input type="submit" class="btn btn-primary" id="regbutton" value="Register" />
            </form>
        </div>
    </div>

        }
       
       




    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
